<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
        <logger name="alien4cloud.configuration.InitialLoader" level="info" />
        <logger name="alien4cloud.paas.PaaSProviderPollingMonitor" level="debug" />
        <logger name="alien4cloud.paas.cloudify3.service.EventService" level="debug" />
        <logger name="alien4cloud.paas.cloudify3.dao.EventDAO" level="debug" />
    </Loggers>
</Configuration>